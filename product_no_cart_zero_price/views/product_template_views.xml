<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hide_add_to_cart_zero_price" inherit_id="website_sale.product">
        <xpath expr="//form[@class='oe_website_sale']" position="attributes">
            <attribute name="t-attf-class">
                <t t-esc="('d-none' if product.lst_price == 0 else '')"/> oe_website_sale
            </attribute>
        </xpath>
    </template>
</odoo>